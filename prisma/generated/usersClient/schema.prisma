// usersSchema.prisma
generator usersClient {
  provider = "prisma-client-js"
  output   = "./generated/usersClient"
  binaryTargets = ["native", "debian-openssl-1.1.x", "rhel-openssl-1.0.x"]
}

datasource usersDb {
  provider = "mongodb"
  url      = env("MONGODB_URL_USERS")
}

model Users {
  id                  String    @id @default(auto()) @map("_id") @usersDb.ObjectId
  firstName           String? 
  lastName            String? 
  email               String? @unique
  password            String?
  store1              Boolean @default(false)
  store2              Boolean @default(false)
  store3              Boolean @default(false)
  store4              Boolean @default(false)
  company             String?
  role                UserRole       @default(USER)
  firstsignin         Boolean @default(true)
  firstRecordAction   Boolean @default(false)
  active              Boolean   @default(true)
  temporaryAccessKey   String   @default("EMPTY")
  imageURL            String?   @default("null")
  companyLogo         String?   @default("null")
}

enum UserRole {
  ADMIN
  USER
}