// storeSchema.prisma
generator storeClient {
  provider = "prisma-client-js"
  output   = "./generated/storeClient"
  binaryTargets = ["native", "debian-openssl-1.1.x", "rhel-openssl-1.0.x"]
}

datasource productDb {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

model Products {
  id              String    @id @default(auto()) @map("_id") @productDb.ObjectId
  name            String
  description     String?
  category        String?
  current         Float?    @default(0)
  reorderLevel     Float?    @default(0)
  unitCost        Float?    @default(0)
  sellingPrice    Float?    @default(0)
  taxInformation  Float?    @default(0)
  imageURL        String?   @default("null")
  supplier        String?   @default("null")
  active          Boolean   @default(true)
  firstRecordAction Boolean @default(true)
}
